<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar-admin.ejs') -%>


<div class="container">
    <a href="/dashboard">&larr; Back</a>
    <div class="mt-3">
      <h2>Edit Post</h2>
    </div>
    
    <form action="/edit-post/<%= post._id %>" method="POST" >
    
      <label for="title"><b>Title</b></label>
      <input type="text" placeholder="Post Title" name="title" class="form-control" value="<%=post.title %>">
    
      <label for="body"><b>Content</b></label>
      <textarea name="body" cols="50" rows="10" class="form-control" ><%= post.body%></textarea>
    
      <input type="submit" value="Edit" class="btn btn-dark mt-3" >
    
    </form>
    </div>

<%- include('../partials/footer.ejs') -%>